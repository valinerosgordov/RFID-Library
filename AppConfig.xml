<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <appSettings>
    <add key="BookPort" value="COM5"/>
    <!-- если это ридер карт, то: <add key="CardPort" value="COM5"/> -->
    <add key="ArduinoPort" value="COM7"/>
    <!-- позже подставишь реальный -->
    <add key="CardPort" value="COM6"/>
    <!-- временно любой, если карты ещё нет -->

    <add key="BaudBook" value="115200"/>
    <!-- если тишина/абракадабра — попробуй 9600 -->
    <add key="NewLineBook" value="\r\n"/>
    <!-- многие CP210x шлют CRLF -->
    <!-- остальные ключи оставь как были -->
  </appSettings>

</configuration>
